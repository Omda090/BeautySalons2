<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeautySalons</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Beauty" asp-action="IndexBeauty">BeautySalons</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Beauty" asp-action="IndexBeauty">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>*@


                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="collapse-item" asp-controller="Beauty" asp-action="IndexBeauty"> الرئيسية</a>

                                </li>
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <li class="nav-item">
                                    <a class="collapse-item" asp-controller="Service" asp-action="IndexServices">خدمات المركز</a>

                                </li>
                                &nbsp;&nbsp; &nbsp;&nbsp;
                                <li class="nav-item">
                                    <a class="collapse-item" asp-controller="Video" asp-action="IndexVideo"> فيديو</a>

                                </li>
                                &nbsp;&nbsp; &nbsp;&nbsp;
                                <li class="nav-item">
                                    <a class="collapse-item" asp-controller="Service" asp-action="Product"> المنتجات</a>

                                </li>
                                &nbsp;&nbsp; &nbsp;&nbsp;

                                <li class="nav-item">
                                    <a class="collapse-item" asp-controller="Service" asp-action="AboutUs"> حولنا</a>

                                </li>
                                &nbsp;&nbsp; &nbsp;&nbsp;

                                <li class="nav-item">
                                    <a class="collapse-item" asp-controller="Service" asp-action="CallUs"> اتصل بنا</a>

                                </li>
                                &nbsp;&nbsp; &nbsp;&nbsp;

                                <li class="nav-item">
                                    <a class="collapse-item" asp-controller="Service" asp-action="Complain">  شكاوي</a>

                                </li>
                                &nbsp;&nbsp; &nbsp;&nbsp;

                                @*<li class="nav-item">
                                        <a class="nav-link" href="#">Link</a>
                                    </li>*@
                                @*<li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Dropdown
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" href="#">Action</a></li>
                                            <li><a class="dropdown-item" href="#">Another action</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                                        </ul>
                                    </li>*@

                            </ul>
                            <form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>
                        </div>
                    </div>
                </nav>



            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - BeautySalons - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @*//Toast*@

    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <img src="..." class="rounded me-2" alt="...">
            <strong class="me-auto">Bootstrap</strong>
            <small>11 mins ago</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Hello, world! This is a Beauty Center
        </div>
    </div>

    @*//EndToast*@

</body>
</html>
